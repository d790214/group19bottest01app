# Docs for the Azure Web Apps Deploy action: https://github.com/Azure/webapps-deploy
# More GitHub Actions for Azure: https://github.com/Azure/actions

name: Build and deploy container app to Azure Web App - group19test01app

on:
  push:
    branches:
      - main
  workflow_dispatch:

jobs:
  build:
    runs-on: 'ubuntu-latest'

    steps:
    - uses: actions/checkout@v2

    - name: Set up Docker Buildx
      uses: docker/setup-buildx-action@v1

    - name: Log in to registry
      uses: docker/login-action@v1
      with:
        registry: https://group19bottest01.azurecr.io/
        username: ${{ secrets.AzureAppService_ContainerUsername_c899dc22f6444562819ab3e811f7386d }}
        password: ${{ secrets.AzureAppService_ContainerPassword_64521d100e8f4f86b14211c30f2a5299 }}

    - name: Build and push container image to registry
      uses: docker/build-push-action@v2
      with:
        push: true
        tags: group19bottest01.azurecr.io/${{ secrets.AzureAppService_ContainerUsername_c899dc22f6444562819ab3e811f7386d }}/group19bottest01:${{ github.sha }}
        file: ./Dockerfile

  deploy:
    runs-on: ubuntu-latest
    needs: build
    environment:
      name: 'production'
      url: ${{ steps.deploy-to-webapp.outputs.webapp-url }}

    steps:
    - name: Deploy to Azure Web App
      id: deploy-to-webapp
      uses: azure/webapps-deploy@v2
      with:
        app-name: 'group19test01app'
        slot-name: 'production'
        publish-profile: ${{ secrets.AzureAppService_PublishProfile_f176b80f12fe48cd982425f15f770688 }}
        images: 'group19bottest01.azurecr.io/${{ secrets.AzureAppService_ContainerUsername_c899dc22f6444562819ab3e811f7386d }}/group19bottest01:${{ github.sha }}'